<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.ClientController">
   <center>
      <TextArea fx:id="txtDisplay" editable="false" prefHeight="368.0" prefWidth="600.0" BorderPane.alignment="CENTER" />
   </center>
   <bottom>
      <BorderPane BorderPane.alignment="CENTER">
         <right>
            <Button fx:id="btnSend" mnemonicParsing="false" prefWidth="90.0" text="SEND" BorderPane.alignment="CENTER" />
         </right>
         <center>
            <TextField fx:id="txtInput" promptText="Enter Contents" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets right="10.0" />
               </BorderPane.margin>
            </TextField>
         </center>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
      </BorderPane>
   </bottom>
   <top>
      <BorderPane BorderPane.alignment="CENTER">
         <center>
            <HBox spacing="10.0" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="btnReset" mnemonicParsing="false" prefWidth="90.0" text="RESET" />
                  <TextField fx:id="txtIp" prefWidth="120.0" promptText="IP Address" text="192.168.0.4" />
                  <TextField fx:id="txtPort" prefWidth="120.0" promptText="Port Number" text="50001" />
                  <TextField fx:id="txtId" prefWidth="120.0" promptText="Enter ID" />
               </children>
               <BorderPane.margin>
                  <Insets />
               </BorderPane.margin>
            </HBox>
         </center>
         <right>
            <Button fx:id="btnConn" mnemonicParsing="false" prefWidth="90.0" text="Connect" BorderPane.alignment="CENTER" />
         </right>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
      </BorderPane>
   </top>
</BorderPane>
